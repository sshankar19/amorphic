{
    "include": [
        "./apps/**/*",
        "./unittest.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "dom",
            "es7",
            "es2015.promise"
