{
  "include": [
    "./lib/**/*",
    "./amorphic.ts",
    "./index.ts",
    "./client.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "dom",
      "es7",
      "es2015.promise"
    ],
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
